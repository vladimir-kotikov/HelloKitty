{
    "compilerOptions": {
        "target": "es6",
        "module": "es6",
        "jsx": "react-native",
        "noImplicitAny": true,
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "outDir": "build",
        "rootDir": "src",
        "sourceRoot": "src",
        "inlineSourceMap": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "index.android.js",
        "index.ios.js",
        "build",
        "node_modules",
        "__tests__"
    ]
}
